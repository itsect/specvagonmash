                    <li>
                        <div class="flex items-center">
                            <svg class="h-5 w-5 flex-shrink-0 text-gray-400" xmlns="http://www.w3.org/2000/svg"
                                 viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                <path fill-rule="evenodd"
                                      d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
                                      clip-rule="evenodd"/>
                            </svg>
                            <a href={new URL(category.slug, 'https://itsect.github.io/specvagonmash/products/')}
                               class="ml-4 text-sm font-medium text-gray-500 hover:text-gray-700 truncate"
                               aria-current="page" title={category.data.title}>{category.data.title}</a>
                        </div>
                    </li>

                    <li>
                        <div class="flex items-center">
                            <svg class="h-5 w-5 flex-shrink-0 text-gray-400" xmlns="http://www.w3.org/2000/svg"
                                 viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                <path fill-rule="evenodd"
                                      d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
                                      clip-rule="evenodd"/>
                            </svg>
                            <a href="#" class="ml-4 text-sm font-medium text-gray-500 hover:text-gray-700 truncate"
                               aria-current="page" title={entry.data.title}>{entry.data.title}</a>
                        </div>
                    </li>
                </ol>
            </nav>
        </div>

        <div class="mx-auto max-w-2xl px-4 pb-16 pt-10 sm:px-6 lg:grid lg:max-w-7xl lg:grid-cols-3 lg:grid-rows-[auto,auto,1fr] lg:gap-x-8 lg:px-8 lg:pb-24 lg:pt-16">

            <div class="lg:col-span-2 lg:border-r lg:border-gray-200 lg:pr-8">

            </div>

            <!-- Product image -->
            {image &&
                <div class="mt-4 lg:row-span-3 lg:mt-0">
                    <div class="aspect-w-1 aspect-h-1 rounded-lg">
                        {image && entry.data?.has_featured_image && (
                                <Image aspectRatio={'16:9'} position={'top'} src={image.default} alt={entry.data.title} />
                        )}
                    </div>
                </div>
            }

            <!-- Product details -->
            <div class="lg:col-span-2 lg:col-start-1 lg:border-r lg:border-gray-200 lg:pb-16 lg:pr-8">

                <section aria-labelledby="information-heading" class="mt-4">

                    <div class="prose g:prose-xl">
                        <Content/>

                        {entry.data?.has_pdf && (
                                <a href={entry.data.pdf}
                                   class="mt-8 inline-flex items-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
                                   type="button">Скачать PDF документацию</a>
                        )}

                    </div>

                </section>
            </div>

        </div>
    </div>
</ProductsLayout>